{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build API",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/api"
            },
            "command": [
                "cargo"
            ],
            "args": [
                "build",
                "--release"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Deploy API",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/api"
            },
            "command": [
                "./deploy.sh"
            ],
            "dependsOn": [
                "Build API"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/www"
            },
            "command": [
                "npm"
            ],
            "args": [
                "run",
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/www"
            },
            "command": [
                "npm"
            ],
            "args": [
                "start"
            ],
            "dependsOn": [
                "Deploy API",
                "Build Frontend"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}